<table id="mytable"></table><br>

<button onclick="display()">Click me</button>

<script> 
	function display() {
		var x = prompt("Please enter a number");
        document.getElementById("demo").innerHTML = x;
        var y = prompt("Please enter a number");
        document.getElementById("print").innerHTML = y;
        let g;
    		if (x<2 || x>10){
    			g = alert("Please enter numbers between 2 and 10");
                }
    		else if (y<2 || y>10){
            	g = alert("Please enter numbers between 2 and 10");
                }
    		else{
            
  			var table=document.getElementById('mytable');
    		var output="";
      		for (var i=1;i<=x;i++) {
  		  		output +="<tr>";
          		for (var j=1;j<=y;j++) {
          			if (i==1 && j==1)
    		    		output+="<th>1</th>";
    	    		else
          				{
        	  				if (i==1 || j==1)
    		      				output+="<th>"+i*j+"</th>";
    		    			else
			        			output+="<td>"+i*j+"</td>"; 
           				}
        		}
        		output +="</tr>";
       		}
    		table.innerHTML=output;
   		} 
       }
 
</script>
